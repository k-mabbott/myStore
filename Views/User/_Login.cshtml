
@model LoginUser

<div class="text-center p-3">
    <h1 class="display-4">Login</h1>
    <hr>
    <form asp-action="Login" asp-controller="User" method="post" >
    <div class="mb-3">
        <label asp-for="LoginEmail"></label>
        <span style="font-weight: 600;" asp-validation-for="LoginEmail" class="text-danger d-block " ></span>
        <input asp-for="LoginEmail" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="LoginPassword"></label>
        <span style="font-weight: 600;" asp-validation-for="LoginPassword" class="text-danger d-block " ></span>
        <input asp-for="LoginPassword" class="form-control">
    </div>
    <button type="submit" class="btn btn-outline-success" >Login</button>
</form>
</div>
